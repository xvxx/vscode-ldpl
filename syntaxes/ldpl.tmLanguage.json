{
	"$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
	"name": "LDPL",
	"patterns": [
		{
			"include": "#procedures"
		},
		{
			"include": "#keywords"
		},
		{
			"include": "#strings"
		},
		{
			"include": "#numbers"
		},
		{
			"include": "#comments"
		}
	],
	"repository": {
		"procedures": {
			"patterns": [{
				"name": "entity.name.function.ldpl",
				"match": "(?<=sub-procedure|SUB-PROCEDURE) (.+)"
			}]
		},
		"keywords": {
			"patterns": [{
				"name": "keyword.control.ldpl",
				"match": "(?<=^|[\\s])((?i)procedure:|data:|display|accept|join|while|do|repeat|from|if|then|else|end if|or|and|in|by|is|not|add|subtract|multiply|divide|modulo|abs|floor|ceil|call sub-procedure|call|external|sub-procedure|end sub-procedure|get character at|store length of|exit|execute|and store exit code in|return|break|continue|store character|store character code of|accept|until eof|store random in|equal to|greater than|less than|store|load file|write|append|to file|wait|milliseconds)(?=\\s|$)"
			},
			{
				"name": "storage.type.ldpl",
				"match": "(?<=^|[\\s])((?i)number|text|vector)(?=\\s|$)"
			},
			{
				"name": "constant.language.boolean.ldpl",
				"match": "(?<=^|\\s)(?i)crlf(?=\\s|$)"
			}
		]
		},
		"strings": {
			"name": "string.quoted.double.ldpl",
			"begin": "\"",
			"end": "\"",
			"patterns": [
				{
					"name": "constant.character.escape.ldpl",
					"match": "\\\\."
				}
			]
		},
		"numbers": {
			"patterns": [
				{
					"match": "(-?\\d\\d*(\\.\\d\\d*)?)",
					"name": "constant.numeric.double.ldpl"
				}
			]
		},
		"comments": {
			"patterns": [
				{
					"begin": "#",
					"beginCaptures": {
						"0": {
							"name": "punctuation.definition.comment.ldpl"
						}
					},
					"end": "$",
					"name": "comment.line.ldpl"
				}
			]
		}
	},
	"scopeName": "source.ldpl"
}
